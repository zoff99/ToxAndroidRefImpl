<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:gravity="center"
        android:src="@drawable/emoji_ios_1f601" />

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:background="@drawable/status_bg"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status_bar_button_info_container_padding_left">

        <Chronometer
            android:id="@+id/status_bar_chrono1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/status_bar_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist Name" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/status_bar_play"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="Pause"
        android:padding="13dp"
        android:scaleType="fitCenter"
        android:src="@drawable/about_icon_google_play" />

    <ImageView
        android:id="@+id/status_bar_dummy1"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:src="@null" />

    <ImageButton
        android:id="@+id/status_bar_stop"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="Stop"
        android:padding="13dp"
        android:scaleType="fitCenter"
        android:src="@drawable/about_icon_instagram" />

    <ImageView
        android:id="@+id/status_bar_dummy1b"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:src="@null" />

</LinearLayout>