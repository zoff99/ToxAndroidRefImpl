<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0277bd"
              android:orientation="vertical"
              tools:context="com.zoffcc.applications.trifa.CallingActivity">


    <TextView
        android:id="@+id/top_text_line"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="xxxxxxxx"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/video_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>

            <FrameLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="bottom|right">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/border_001"
                    android:padding="5dp">

                    <com.zoffcc.applications.trifa.CameraSurfacePreview
                        android:id="@+id/camera_surfaceview"
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_gravity="bottom|right"
                        android:elevation="2dp"
                        android:gravity="center"/>
                </FrameLayout>
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="">
        </TextView>

        <ImageButton
            android:id="@+id/accept_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:src="@drawable/circle_green"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="">
        </TextView>

        <ImageButton
            android:id="@+id/camera_toggle_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:src="@drawable/circle_blue"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="">
        </TextView>

        <ImageButton
            android:id="@+id/mute_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:src="@drawable/circle_orange"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="">
        </TextView>

        <ImageButton
            android:id="@+id/decline_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:src="@drawable/circle_red"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="">
        </TextView>
    </LinearLayout>


</LinearLayout>
